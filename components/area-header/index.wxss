/* components/area-header/index.wxss */
.area-header {
  display: flex;
  align-items: center;
  height: 35px;
  line-height: 35px;
}
.left{
  flex:1
}
.left-slot:empty +.left-default ,.right-slot:empty +.right-default{
  display: flex !important;
}
.left .left-default,.right .right-default  {
  display: none;
  align-items: center;
  font-size: 15px;
  font-weight: 600;
}
.title-icon, .more-icon{
  height: 20px;
  width: 20px;
}